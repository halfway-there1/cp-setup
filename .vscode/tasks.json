{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file ::(selectMe)",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "-DVSCODE_DEBUG",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c++17",
                "-Woverflow",
                "-Wconversion",
                "-D_GLIBCXX_DEBUG",
                "-D_GLIBCXX_DEBUG_PEDANTIC",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:\\mingw64\\bin\\g++.exe",
        }
    ]
}